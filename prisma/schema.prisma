datasource db {
  provider = "sqlite"
  url      = env("LEAF_DATABASE")
}

generator client {
  provider = "prisma-client-js"
}

model Articles {
  id        String    @id @unique
  url       String
  title     String
  html      String?
  cover     String?
  beginning String?
  position  Int       @default(0)
  progress  Int       @default(0)
  archived  Int       @default(0)
  liked     Int       @default(0)
  timestamp DateTime
}

model Tags {
  id   Int @id @default(autoincrement())
  ulid String 
  tag  String
}